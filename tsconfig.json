{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2020",
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "lib": ["ES2023", "DOM"],
        "outDir": "dist"
    },
    "include": ["src/**/*", "eslint.config.ts", "workbox-config.js"]
}
