{
    "name": "@web-cell/mobile",
    "version": "0.2.0",
    "description": "Mobile App scaffold of WebCell v2",
    "author": "shiy2008@gmail.com",
    "homepage": "https://web-cell.dev/mobile/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/mobile.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/mobile/issues"
    },
    "dependencies": {
        "@material/mwc-drawer": "^0.20.0",
        "@material/mwc-icon-button": "^0.20.0",
        "@material/mwc-list": "^0.20.0",
        "@material/mwc-top-app-bar": "^0.20.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.4",
        "koajax": "^0.6.4",
        "material-cell": "^2.0.0-rc.2",
        "mobx": "5.15.7",
        "mobx-web-cell": "^0.3.4",
        "web-cell": "^2.3.0-beta.6",
        "web-utility": "^2.4.1"
    },
    "devDependencies": {
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "workbox-cli": "^6.0.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml,js,ts,tsx}": "prettier --write"
    },
    "scripts": {
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
